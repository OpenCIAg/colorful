{
  "name": "ciag-colorful",
  "version": "0.0.9",
  "description": "Color Generator",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "**/*"
  ],
  "standard": {
    "ignore": [
      "coverage/**",
      "node_modules/**"
    ]
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp package.json dist/",
    "test": "nyc --reporter=html --reporter=text mocha test/**/*.spec.ts",
    "predeploy": "npm run build",
    "deploy": "cd dist/ && npm publish",
    "coverage": "nyc report --reporter=text-lcov | codeclimate-test-reporter "
  },
  "author": "Etto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "chai-string": "^1.4.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "codeclimate-test-reporter": "^0.5.0"
  }
}
